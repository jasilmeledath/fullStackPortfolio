<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Access Terminal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Orbitron:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-black overflow-hidden">
    <!-- Animated Background -->
    <div class="fixed inset-0 z-0">
        <div class="matrix-bg"></div>
        <div class="grid-overlay"></div>
        <div class="scan-lines"></div>
    </div>

    <!-- Floating Particles -->
    <div class="particles-container">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
        <div class="particle particle-6"></div>
        <div class="particle particle-7"></div>
        <div class="particle particle-8"></div>
        <div class="particle particle-9"></div>
        <div class="particle particle-10"></div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10 min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <!-- Terminal Header -->
            <div class="terminal-header mb-6">
                <div class="flex items-center justify-between mb-2">
                    <div class="flex space-x-2">
                        <div class="w-3 h-3 rounded-full bg-red-500 terminal-dot terminal-dot-1"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500 terminal-dot terminal-dot-2"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500 terminal-dot terminal-dot-3"></div>
                    </div>
                    <div class="text-green-400 text-xs font-mono">SECURE_TERMINAL_v2.1</div>
                </div>
                <div class="text-green-400 font-mono text-sm">
                    <span class="typing-text">root@cyberspace:~$ access_granted</span>
                    <span class="cursor-blink">|</span>
                </div>
            </div>

            <!-- Login Card -->
            <div class="login-card backdrop-blur-sm bg-black bg-opacity-80 border border-green-500 border-opacity-30 rounded-lg shadow-2xl overflow-hidden">
                <!-- Card Header -->
                <div class="bg-gradient-to-r from-green-900 from-opacity-50 to-cyan-900 to-opacity-50 p-4 border-b border-green-500 border-opacity-30">
                    <h2 class="text-center text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-cyan-400 font-orbitron glitch-text" data-text="AUTHENTICATION">
                        AUTHENTICATION
                    </h2>
                    <div class="text-center text-xs text-green-400 opacity-70 font-mono mt-1">
                        CLASSIFIED ACCESS REQUIRED
                    </div>
                </div>

                <!-- Card Body -->
                <div class="p-6">
                    <form id="loginForm" action="/api/auth/login" method="POST" class="space-y-4">
                        <div class="form-group">
                            <label for="username" class="block text-sm font-mono text-green-400 mb-1">ACCESS CODE</label>
                            <input type="text" id="username" name="username" required
                                class="w-full px-3 py-2 bg-black bg-opacity-50 border border-green-500 border-opacity-30 rounded-md text-green-400 font-mono focus:outline-none focus:border-green-400 focus:ring-1 focus:ring-green-400"
                                placeholder="Enter access code">
                            <div class="error-message text-red-400 text-xs mt-1 hidden"></div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="block text-sm font-mono text-green-400 mb-1">SECURITY KEY</label>
                            <input type="password" id="password" name="password" required
                                class="w-full px-3 py-2 bg-black bg-opacity-50 border border-green-500 border-opacity-30 rounded-md text-green-400 font-mono focus:outline-none focus:border-green-400 focus:ring-1 focus:ring-green-400"
                                placeholder="Enter security key">
                            <div class="error-message text-red-400 text-xs mt-1 hidden"></div>
                        </div>

                        <button type="submit"
                            class="w-full py-2 px-4 bg-gradient-to-r from-green-600 to-cyan-600 text-white font-mono rounded-md hover:from-green-500 hover:to-cyan-500 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-opacity-50 transition-all duration-200">
                            [ ENTER SYSTEM ]
                        </button>
                    </form>

                    <!-- Footer -->
                    <div class="mt-6 pt-4 border-t border-green-500 border-opacity-20">
                        <div class="text-center text-xs text-green-400 text-opacity-50 font-mono">
                            <div class="mb-1">UNAUTHORIZED ACCESS PROHIBITED</div>
                            <div class="text-red-400 text-opacity-70">ALL ACTIVITIES ARE MONITORED</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status Messages -->
            <div id="statusMessage" class="mt-4 p-3 rounded-md font-mono text-sm hidden">
                <div class="flex items-center">
                    <span class="status-icon mr-2"></span>
                    <span class="status-text"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="script.js"></script>
</body>
</html>