<%- include('partials/head') %>
<body class="bg-black text-green-400 font-mono overflow-x-hidden">
    <!-- Matrix Background -->
    <canvas id="matrix-bg" class="fixed inset-0 z-0 opacity-20"></canvas>
    
    <!-- Main Container -->
    <div class="relative z-10 min-h-screen">
        <!-- Header -->
        <%- include('partials/header') %>

        <div class="container mx-auto px-4 py-8">
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                <!-- Sidebar -->
                <%- include('partials/sidebar') %>
                <!-- Main Content -->
                <div class="lg:col-span-3">
                    <!-- Welcome Section -->
                    <div class="bg-gray-900/50 border border-green-500/30 rounded-lg p-6 mb-6 backdrop-blur-sm">
                        <h2 class="text-2xl font-bold mb-2 text-green-400">
                            WELCOME_BACK, <span class="text-cyan-400 glitch-text" data-text="<%= user.username %>"><%= user.username %></span>
                        </h2>
                        <p class="text-gray-400 mb-4">System access granted. Manage your portfolio content from this secure terminal.</p>
                        <div class="flex items-center space-x-4 text-sm">
                            <div class="flex items-center">
                                <i class="fas fa-clock mr-2 text-green-500"></i>
                                <span>Last login: <span id="last-login"></span></span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-shield-alt mr-2 text-green-500"></i>
                                <span>Security: ACTIVE</span>
                            </div>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                        <div class="stat-card bg-gradient-to-br from-blue-900/50 to-blue-800/30 border border-blue-500/30 rounded-lg p-6 backdrop-blur-sm hover:scale-105 transition-all duration-300 cursor-pointer">
                            <div class="flex items-center justify-between mb-4">
                                <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-briefcase text-blue-400 text-xl"></i>
                                </div>
                                <div class="text-right">
                                    <div class="text-2xl font-bold text-blue-400 counter" data-target="12">0</div>
                                    <div class="text-xs text-gray-400">PROJECTS</div>
                                </div>
                            </div>
                            <h3 class="text-lg font-bold text-blue-400 mb-2">PORTFOLIO</h3>
                            <p class="text-gray-400 text-sm mb-4">Manage your skills and projects</p>
                            <a href="/admin/portfolio" class="inline-flex items-center px-4 py-2 bg-blue-600/20 border border-blue-500 text-blue-400 hover:bg-blue-600/40 transition-all duration-300 rounded text-sm">
                                <i class="fas fa-arrow-right mr-2"></i>ACCESS
                            </a>
                        </div>

                        <div class="stat-card bg-gradient-to-br from-green-900/50 to-green-800/30 border border-green-500/30 rounded-lg p-6 backdrop-blur-sm hover:scale-105 transition-all duration-300 cursor-pointer">
                            <div class="flex items-center justify-between mb-4">
                                <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-blog text-green-400 text-xl"></i>
                                </div>
                                <div class="text-right">
                                    <div class="text-2xl font-bold text-green-400 counter" data-target="8">0</div>
                                    <div class="text-xs text-gray-400">ARTICLES</div>
                                </div>
                            </div>
                            <h3 class="text-lg font-bold text-green-400 mb-2">BLOG</h3>
                            <p class="text-gray-400 text-sm mb-4">View your Medium posts</p>
                            <a href="/admin/blog" class="inline-flex items-center px-4 py-2 bg-green-600/20 border border-green-500 text-green-400 hover:bg-green-600/40 transition-all duration-300 rounded text-sm">
                                <i class="fas fa-arrow-right mr-2"></i>ACCESS
                            </a>
                        </div>

                        <div class="stat-card bg-gradient-to-br from-cyan-900/50 to-cyan-800/30 border border-cyan-500/30 rounded-lg p-6 backdrop-blur-sm hover:scale-105 transition-all duration-300 cursor-pointer">
                            <div class="flex items-center justify-between mb-4">
                                <div class="w-12 h-12 bg-cyan-500/20 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-envelope text-cyan-400 text-xl"></i>
                                </div>
                                <div class="text-right">
                                    <div class="text-2xl font-bold text-cyan-400 counter" data-target="23">0</div>
                                    <div class="text-xs text-gray-400">MESSAGES</div>
                                </div>
                            </div>
                            <h3 class="text-lg font-bold text-cyan-400 mb-2">MESSAGES</h3>
                            <p class="text-gray-400 text-sm mb-4">Check contact form submissions</p>
                            <a href="/admin/messages" class="inline-flex items-center px-4 py-2 bg-cyan-600/20 border border-cyan-500 text-cyan-400 hover:bg-cyan-600/40 transition-all duration-300 rounded text-sm">
                                <i class="fas fa-arrow-right mr-2"></i>ACCESS
                            </a>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="bg-gray-900/50 border border-green-500/30 rounded-lg p-6 backdrop-blur-sm">
                        <h3 class="text-lg font-bold mb-4 text-green-400">
                            <i class="fas fa-history mr-2"></i>RECENT_ACTIVITY
                        </h3>
                        <div class="space-y-4">
                            <div class="activity-item flex items-center p-3 bg-gray-800/50 rounded-lg border-l-4 border-green-500">
                                <div class="w-8 h-8 bg-green-500/20 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-plus text-green-400 text-xs"></i>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm text-gray-300">New project added: "E-commerce Platform"</p>
                                    <p class="text-xs text-gray-500">2 hours ago</p>
                                </div>
                            </div>
                            <div class="activity-item flex items-center p-3 bg-gray-800/50 rounded-lg border-l-4 border-blue-500">
                                <div class="w-8 h-8 bg-blue-500/20 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-edit text-blue-400 text-xs"></i>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm text-gray-300">Blog post updated: "Advanced React Patterns"</p>
                                    <p class="text-xs text-gray-500">5 hours ago</p>
                                </div>
                            </div>
                            <div class="activity-item flex items-center p-3 bg-gray-800/50 rounded-lg border-l-4 border-cyan-500">
                                <div class="w-8 h-8 bg-cyan-500/20 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-envelope text-cyan-400 text-xs"></i>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm text-gray-300">New message from client</p>
                                    <p class="text-xs text-gray-500">1 day ago</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Terminal Modal -->
    <div id="terminal-modal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 hidden">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-black border border-green-500 rounded-lg w-full max-w-4xl h-96 p-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-green-400 font-bold">SYSTEM_TERMINAL</h3>
                    <button id="close-terminal" class="text-red-400 hover:text-red-300">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div id="terminal-output" class="bg-black p-4 rounded border border-gray-700 h-64 overflow-y-auto font-mono text-sm">
                    <div class="text-green-400">System initialized...</div>
                    <div class="text-green-400">Loading dashboard modules...</div>
                    <div class="text-green-400">Access granted to user: <%= user.username %></div>
                    <div class="text-green-400">Ready for commands...</div>
                </div>
                <div class="flex items-center mt-2">
                    <span class="text-green-400 mr-2">$</span>
                    <input type="text" id="terminal-input" class="flex-1 bg-transparent text-green-400 outline-none" placeholder="Enter command...">
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>